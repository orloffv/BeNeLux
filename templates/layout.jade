!!! 5
html(lang='en')
    head
        meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
        title
            block title
                = locals.name
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.css')
        link(rel='stylesheet', href='/css/custom.css')
    body
        header.header
            div.content-wrap
                block header
                    div.logo
                        h1
                            a(href=locals.url)= locals.name
        ol.breadcrumb
            block breadcrumb

        div#content
            div.content-wrap
                block content
                    h2 Welcome to zombocom!
        footer
            div.content-wrap
                block footer
                    section.copy
                        p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
                            a(href='https://github.com/jnordberg/wintersmith') Wintersmith
                            //- please leave the "powered by" if you use the design
